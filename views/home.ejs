<!DOCTYPE html>
<html lang="en">

<head>
  <%- include("./partials/head") %>
  <title>Home</title>
  <link rel="stylesheet" href="/css/home.css"> <!-- extra coded -->
</head>

<body>
  <%- include("./partials/nav") %>

  <div class="container mt-4">
    <div class="row">
      <% blogs.forEach(blog => { %>
        <div class="col-md-3 mb-4">
          <div class="card blog-card h-100"> <!-- extra coded -->
            <img src="<%= blog.coverImageURL %>" class="card-img-top blog-img" alt="Blog Image"> <!-- extra coded -->
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= blog.title %></h5>
              <a href="/blog/<%= blog._id %>" class="btn btn-outline-primary mt-auto">View</a> <!-- extra coded -->
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include("./partials/script") %>
</body>

</html>
